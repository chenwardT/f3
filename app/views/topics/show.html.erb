<div id="breadcrumb">
  <a href="<%= categories_path %>">Forum</a>
  >
  <a href="<%= category_path(@topic.forum.category) %>"><%= @topic.forum.category %></a>
  >
  <a href="<%= forum_path(@topic.forum) %>"><%= @topic.forum %></a>
  >
  <%= @topic.title %>
</div>
<br>
<div>
  <table>
    <tbody>
      <% @topic.posts.each do |post| %>
      <tr>
        <td>
        <%= render 'posts/post', post: post %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% if current_user %>
    <%= render 'posts/post_reply_form', topic: @topic %>
  <% end %>
</div>