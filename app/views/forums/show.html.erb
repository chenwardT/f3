<div id="breadcrumb">
  <a href="<%= categories_path %>">Forum</a>
  >
  <a href="<%= category_path(@forum.category) %>"><%= @forum.category %></a>
  >
  <%= @forum.title %>
</div>
<% if current_user %>
  <div>
    <%= link_to "Post New Topic", new_topic_path(forum: @forum.id), method: :get, class: 'btn btn-primary' %>
  </div>
<% end %>
<div>
  <h4>Forum: <%= @forum.title %></h4>
  <p><%= @forum.description %></p>
  <table>
    <thead>
      <tr>
        <th>Topic / Author</th>
        <th>Replies</th>
        <th>Last Post</th>
      </tr>
    </thead>
    <% @forum.topics.each do |topic| %>
      <%= render 'topics/topic', topic: topic %>
    <% end %>
  </table>
</div>